.row
  %ul.breadcrumbs
    %li
      %a(href="#") Home
    %li.current
      %a(href="courses.html") Courses
.row
  .large-12.columns
    = link_to "Add Course", new_admin_course_path, class: "button success"
    %h3 Courses
    %table.large-12.columns
      %tr>
        %td Id
        %td Course Title
        %td Edit
        %td Chapters
      - @courses.each do |course|
        %tr
          %td= course.id
          %td= course.title
          %td 
            = link_to "Edit", edit_admin_course_path(course)
            &nbsp;&nbsp;
            = link_to "Delete", admin_course_path(course.id), method: :delete
          %td
            = link_to "Chapters", admin_course_chapters_path(course.id)
