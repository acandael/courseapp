.row
  %ul.breadcrumbs
    %li
      %a(href="#") Home
    %li
      = link_to @course.title, admin_course_path(@course.id)
    %li.current
      %a(href="#") Add Chapter
.row
  .large-12.columns
    %h1 Add a chapter
= form_for [:admin, @course, @chapter] do |f|
  .row
    .row
      .large-2.columns
        = f.label :title, "Chapter Title:" 
      .large-6.columns
        = f.text_field :title 
      .large-4.columns
    .row
      .large-2.columns
        = f.label :description, "Chapter Description:"
      .large-6.columns
        = f.text_area :description, placeholder: "Enter a small description for this course"
      .large-4.columns
    .row
      .large-2.columns
        = f.label :tagline, "Badge Tagline"
      .large-10.columns
        = f.text_field :tagline
    .row
      .large-2.columns
        = f.label :badge_image, "Upload a badge image"
      .large-6.columns
        = f.file_field :badge_image
      .large-4.columns
        &nbsp;
    .row
      .large-12.columns
        %br
    .row
      .large-6.columns
        %input(type="submit" class="button success" value="Add Chapter")
