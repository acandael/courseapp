.row
  %ul.breadcrumbs
    %li
      %a(href="index.html") Home
    %li.current= @course.title 
%header.row
  .panel.callout
    .row
      .large-8.columns
        %h1= @course.title 
        %p= @course.description 
      .large-4.columns
        = image_tag @course.image.url(:small_thumb) if @course.image?
.row
  .large-9.columns
    - @course.chapters.each do |chapter|
      .row
        %h3.subheader= chapter.title 
        .large-4.columsn
          = image_tag chapter.badge_image.url(:small_thumb), class: "left" if chapter.badge_image?
        .large-8.columns
          %p= chapter.description 
          = link_to "Get started", chapter_path(chapter.id), class: "small button success right"
      - if chapter != @course.chapters.last
        .row
          %br
          %hr
