.row
  %ul.breadcrumbs
    %li
      = link_to "Courses", admin_courses_path 
    %li
      = link_to @chapter.course.title, admin_course_path(@chapter.course_id)
    %li
      = link_to @chapter.title, admin_chapter_path(@chapter.id)
    %li.unavailable Videos
    %li.unavailable Edit
    %li
      = link_to @video.title, admin_chapter_video_path(@chapter.id, @video.id)

.row
  %h3.subheader= "Edit video: #{@video.title}"
  = form_for [:admin, @chapter, @video], html: { class: "panel" } do |f|

    = render 'shared/error_messages', target: @video
    .row
      .large-12.columns
      &nbsp;
      .row
        .large-2.columns
          = f.label :title, "Video Title:"
        .large-6.columns
          = f.text_field :title 
        .large-4.columns
      .row
        .large-2.columns
          = f.label :description, "Video Description:"
        .large-6.columns
          = f.text_field :description 
        .large-4.columns
      .row
        .large-2.columns
          = f.label "Duration"
        .large-1.columns
          = f.number_field :mins 
        .large-1.columns
          = f.label :mins, "mins"
        .large-1.columns
          = f.number_field :secs
        .large-1.columns
          = f.label :secs, "secs"
        .large-6.columns
          &nbsp;
      .row
        .large-2.columns
          = f.label :video, "Enter video file name:"
        .large-4.columns
        .large-6.columns
          = f.text_field :video 
      .row
        .large-12.columns
          %br
      .row
        .large-6.columns
          %input(type="submit" class="button success radius" value="Update Video")
