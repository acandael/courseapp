.row
  %ul.breadcrumbs
    %li= link_to "Courses", admin_courses_path
    %li= link_to @chapter.course.title, admin_course_path(@chapter.course_id)
    %li.unavailable Chapters
    %li
      = link_to @chapter.title, admin_chapter_path(@chapter.id)
    %li.unavailable Quiz
    %li
      = link_to @quiz.title, admin_quiz_path(@quiz.id)
.row
  .large-12.columns
    %h1 Edit Quiz
    = form_for [:admin, @chapter, @quiz] do |f|
      = render 'shared/error_messages', target: @quiz
      .row
        .large-2.columns
          = f.label :title, "Quiz Title:" 
        .large-7.columns
          = f.text_field :title 
        .large-3.columns
      .row
        .large-3.columns
          = f.submit "Update Quiz", class: "button success radius"
