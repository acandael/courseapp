.row
  %ul.breadcrumbs
    %li
      %a(href="#") Home
    %li
      %a(href="videos.html") Videos
    %li.current Add Video
.row
  .large-12.columns
    %h1 Add Video
= form_for [:admin, @chapter, @video], html: { multipart: true } do |f|
  .row
    .row
      .large-2.columns
        = f.label :title, "Video Title:"
      .large-6.columns
        = f.text_field :title
      .large-4.columns
    .row
      .large-2.columns
        = f.label :description, "Video Description:"
      .large-6.columns
        = f.text_area :description, placeholder: "Enter a small description for this video"
      .large-4.columns
    .row
      .large-2.columns
        = f.label :video_url, "Upload video:"
      .large-6.columns
        = f.file_field :video_url
      .large-4.columns
    .row
      .large-12.columns
        %br
    .row
      .large-2.columns
        Duration
      .large-1.columns
        = f.number_field :mins
      .large-2.columns
        = f.label :mins, "Duration:"
      .large-1.columns
        = f.number_field :secs
      .large-1.columns
        = f.label :secs
      .large-5.columns
        &nbsp;
    .row
      .large-12.columns
        %br
      .row
        .large-6.columns
          %input(type="submit" class="button success" value="Add Video")
